{
    "project": "eokas",
    "version": "0.0.1",
    "buildDir": "_build",
    "installDir": "_install",

    "vars": {
        "depsDir": "./deps/",
        "llvmsdk": "~/Documents/SDK/clang+llvm-12.0.0-x86_64-apple-darwin",
        "cflags": "-O3 -std=c++14"
    },

    "targets": [{
        "name": "eokas",
        "type": "executable",
    
        "cflags": ["${cflags}"],

        "lflags": [],

        "includes": [
            "-I${depsDir}",
            "-I${llvmsdk/include}"
        ],

        "libraries": [
            "-L${depsDir}",
            "-L${llvmsdk}/lib",
            "-larchaism"
        ],

        "runtimes": [
            "@executable_path"
        ],

        "sources": [
            "./src/*.cxx"
        ],

        "copies": []
    }]
}